@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
@model List<Pizza>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/IndexStyle.css"  />
  </head>
  <body>
     
    @* MAIN *@
    <main>
        <div class="container mt-4">
            <button type="button" class="button-create">
                <a class="link-button-create" href="@Url.Action("Create","Pizza")"><b>Crea una pizza</b></a>
            </button>
        </div>

        <div class="container text-center mt-4 mb-4">
            <div class="row mt-3 gy-5">
                
                @foreach (Pizza pizza in Model)
                {
                   <div class="col-4">
                      <div class="card-pizza" style="width: 18rem;">

                             <div class="nome-pizza">
                                <h4><b>@pizza.Nome</b></h4>
                             </div>

                             <div class="container-img-pizza">
                                  <img src="@pizza.Foto" class="card-img" alt="...">
                             </div>

                             <div class="descrizione-pizza">
                                  <p><b>@pizza.Descrizione</b></p>
                             </div>

                             <div class="dettagli">
                                @if (pizza.Categoria != null)
                                {
                                    <span>@pizza.Categoria.Name</span>
                                }
                                else
                                {
                                    <span>Nessuna categoria</span>
                                }
                             </div>
                           
                             <div class="dettagli">
                                  <p>@pizza.Prezzo€</p>
                             </div>

                             <div class="ingredienti">
                                 Per vedere gli ingredienti cliccare su dettagli
                             </div>

                             <div>
                                  <button type="button" class="button">
                                      <a class="link-button" href="@Url.Action("Details","Pizza", new{id=pizza.Id})">Dettagli</a>
                                  </button>
                             </div>
                          
                        
                      </div>
                   </div>
                }

            </div>
        </div>
    </main>

                

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>