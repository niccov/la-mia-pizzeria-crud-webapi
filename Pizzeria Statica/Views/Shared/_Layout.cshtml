<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pizzeria_Statica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Pizzeria_Statica.styles.css" asp-append-version="true" />
    
</head>
<body>
    @Html.Partial("_Header")

    
    <main role="main" class="main-container" style="background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTU2EDJWdE85sc1F4C9j62OGVGyU0y5fgab5w&usqp=CAU);">
            @RenderBody()
    </main>
  

    @Html.Partial("_Footer")
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
